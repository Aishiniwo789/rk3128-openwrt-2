# ===================== 强制锁死目标系统（核心！防止篡改为ATH79）=====================
CONFIG_TARGET_BOARD="rockchip"
CONFIG_TARGET_rockchip=y
CONFIG_TARGET_rockchip_armv7=y
CONFIG_TARGET_rockchip_armv7_DEVICE_generic=y
CONFIG_TARGET_SUBTARGET="armv7"
CONFIG_TARGET_PROFILE="DEVICE_generic"
CONFIG_TARGET_ARCH="arm"
CONFIG_TARGET_ARCH_PACKAGES="arm_cortex-a7_neon-vfpv4"
CONFIG_TARGET_CPU="cortex-a7"
CONFIG_TARGET_FLOAT_ABI="hard"
# 禁用所有其他目标系统，彻底锁死Rockchip
CONFIG_TARGET_ath79=n
CONFIG_TARGET_bcm27xx=n
CONFIG_TARGET_bcm4908=n
CONFIG_TARGET_bcm53xx=n
CONFIG_TARGET_ipq40xx=n
CONFIG_TARGET_ipq806x=n
CONFIG_TARGET_mvebu=n
CONFIG_TARGET_ramips=n
CONFIG_TARGET_x86=n

# ===================== RK3128 32位编译优化（无修改）=====================
CONFIG_DEFAULT_TARGET_OPTIMIZATION="-Os -pipe -march=armv7-a -mtune=cortex-a7 -mfpu=neon-vfpv4 -mfloat-abi=hard"
CONFIG_STRIP_KERNEL_EXPORTS=y
CONFIG_USE_MKLIBS=y
CONFIG_USE_SSTRIP=y
CONFIG_ALL_KMODS=n
CONFIG_DEVEL=y
CONFIG_TOOLCHAINOPTS=y
# 保持禁用ccache，避免权限问题
# CONFIG_CCACHE=y

# ===================== 核心功能：打印服务器（无修改，全保留）=====================
# CUPS打印核心
CONFIG_PACKAGE_cups=y
CONFIG_PACKAGE_cups-bjnp=y
CONFIG_PACKAGE_cups-filters=y
CONFIG_PACKAGE_cups-pdf=y
CONFIG_PACKAGE_ipp-usb=y
CONFIG_PACKAGE_lpd=y
# USB打印机驱动
CONFIG_PACKAGE_usb-printer=y
CONFIG_PACKAGE_kmod-usb-printer=y
# 网络共享打印（Samba）
CONFIG_PACKAGE_samba4-server=y
CONFIG_PACKAGE_samba4-client=y

# ===================== RK3128硬件适配（双USB/网口/无线，无修改）=====================
# 基础系统
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_sshd=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_ttyd=y
CONFIG_PACKAGE_htop=y
# USB全支持
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb-ohci=y
CONFIG_PACKAGE_kmod-usb-uhci=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-extras=y
# 无线驱动（RK3128盒子主流款，全覆盖）
CONFIG_PACKAGE_wpad-basic-openssl=y
CONFIG_PACKAGE_kmod-rtl8188eu=y
CONFIG_PACKAGE_kmod-rtl8192cu=y
CONFIG_PACKAGE_kmod-rtl8821cu=y
CONFIG_PACKAGE_wireless-tools=y
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_hostapd-common=y

# ===================== 彻底根除依赖警告（最后一步）=====================
# 关闭所有PAM/LZMA/Netsnmp相关包
CONFIG_PACKAGE_libpam=n
CONFIG_PACKAGE_liblzma=n
CONFIG_PACKAGE_libnetsnmp=n
CONFIG_PACKAGE_busybox-pam=n
CONFIG_PACKAGE_pam-modules=n
CONFIG_PACKAGE_pam-auth-dialog=n
# 彻底禁用policycoreutils（根除最后一个警告）
CONFIG_PACKAGE_policycoreutils=n
CONFIG_policycoreutils=n
# 关闭其他无用包，精简固件
CONFIG_PACKAGE_kexec-tools=n
CONFIG_PACKAGE_lldpd=n
CONFIG_PACKAGE_kmod-usb-ledtrig-usbport=n
CONFIG_PACKAGE_luci-app-upnp=n
